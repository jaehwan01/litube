    nav 
        ul 
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn 
                li
                    a(href="/users/logout") Log out
                li 
                    a(href="/videos/upload") Upload Video   
                //- li 
                //-     a(href="/my-profile") #{loggedInUser.name}Ïùò Profile    
